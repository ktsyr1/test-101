generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model test {
  id    Int    @id @default(autoincrement())
  title String
}

model User {
  id        Int      @id @default(autoincrement())
  fullname  String?  @default(" ")
  email     String   @unique @default(" ")
  password  String?  @default(" ")
  bio       String?  @default(" ")
  image     String?  @default(" ")
  create_at DateTime @default(now())

  verify_User Boolean? @default(false)
  Blog        Blog[]
}

model Blog {
  id           Int      @id @default(autoincrement())
  title        String
  slug         String   @unique
  shortContent String
  content      String?
  image        String?
  date         String?
  categories   String?
  create_at    DateTime @default(now())

  author   User? @relation(fields: [authorId], references: [id])
  authorId Int?
}

model Survey {
  id               Int      @id @default(autoincrement())
  fullName         String
  age              Int
  occupation       String
  city             String
  gender           String
  typeUser         String
  accessChannels   String
  generalLayout    String
  informationFound String
  problem          String
  suggest          String
  create_at        DateTime @default(now())
}
